{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon --watch src --exec 'ts-node -r tsconfig-paths/register' src/index.ts",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:server": "NODE_ENV=development ts-node-dev --transpileOnly --ignore-watch node_modules src/index.ts",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "prepare": "husky",
    "commit": "npm test && git add . && npx git-cz",
    "test": "npm run migrations:run && jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "gen": "plop",
    "migrations:run": "npm run typeorm -- -d src/data-source migration:run",
    "migrations:undo": "npm run typeorm -- -d src/data-source migration:revert",
    "test:coverage": "npm run migrations:run && jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.0.0",
    "@types/cors": "^2.8.17",
    "axios": "^1.7.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "git-cz": "^4.9.0",
    "http-errors": "^2.0.0",
    "pagarme": "^4.35.2",
    "pagarme-js-types": "^2.9.7",
    "pg": "^8.12.0",
    "plop": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.7",
    "typeorm": "0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^16.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.5.2",
    "typescript-eslint": "^8.5.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "prepare-commit-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
